{
    "name": "页面",
    "view": [
        "css"
    ],
    "theme": [
        {
            "name": "default",
            "param": [
                {
                    "label": "文字颜色",
                    "type": "color",
                    "group": "链接",
                    "name": "link-color",
                    "value": "#0074ff"
                },
                {
                    "label": "文字修饰",
                    "type": "text-decoration",
                    "group": "链接",
                    "name": "link-text-decoration",
                    "value": "none"
                },
                {
                    "label": "悬停颜色",
                    "type": "color",
                    "group": "链接",
                    "name": "link-hover-color",
                    "value": "#0059b0"
                },
                {
                    "label": "悬停修饰",
                    "type": "text-decoration",
                    "group": "链接",
                    "name": "link-hover-text-decoration",
                    "value": "underline"
                }
            ],
            "value": {
                "link-color": "#0074ff",
                "link-text-decoration": "none",
                "link-hover-color": "#0059b0",
                "link-hover-text-decoration": "underline"
            },
            "source": "@theme-name: t-body-default;\n@link-color: #0074ff;\n@link-text-decoration: none;\n@link-hover-color: #0059b0;\n@link-hover-text-decoration: underline;\n\n.@{theme-name} {\n  a {\n    color: @link-color;\n    text-decoration: @link-text-decoration;\n  }\n  a:hover {\n    color: @link-hover-color;\n    text-decoration: @link-hover-text-decoration;\n  }\n}",
            "view": [
                "less"
            ]
        }
    ]
}